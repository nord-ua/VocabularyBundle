<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
           
  <services>
    
    <service id="vocabulary.service" class="NordUa\VocabularyBundle\Service\VocabularyService">
      <argument type="string">%locale%</argument>
      <argument type="service" id="doctrine_mongodb.odm.default_document_manager" />
    </service>
    
    <service id="twig.extension.vocabulary_twig" class="NordUa\VocabularyBundle\Templating\VocabularyTwig">
      <argument type="service" id="vocabulary.service" />
      <tag name="twig.extension" />
    </service>
  </services>
</container>
